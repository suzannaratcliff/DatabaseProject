<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.RadioButton?>
<BorderPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.101"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="DrugzLLC.Controller">
    <top>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <TextField  fx:id="searchBarTextField" onAction="#onSearchComplete" prefWidth="Infinity"/>
            <!--<Group >-->
                <!--<RadioButton text="Doctors">-->

                <!--</RadioButton>-->
                <!--<RadioButton text="Doc">-->

                <!--</RadioButton>-->
                <!--<RadioButton>-->

                <!--</RadioButton>-->
            <!--</Group>-->
        </VBox>
    </top>

    <left>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <HBox>
                <Button minWidth="150" text="PATIENTS" onAction="#onPatientsClicked">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox>
                <Button minWidth="150" text="DOCTORS" onAction="#onDoctorsClicked">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>
            <HBox>
                <Button minWidth="150" text="PRESCRIPTIONS" onAction="#onPrescriptionsClicked">
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Button>
            </HBox>

        </VBox>
    </left>

    <center>
        <StackPane>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <TableView fx:id="doctorTableView" visible="false">
            </TableView>
            <TableView fx:id="prescriptionTableView" visible="false">
            </TableView>
            <TableView fx:id="patientTableView" visible="false">
            </TableView>
        </StackPane>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10"/>
            </padding>
            <Button text="-" onAction="#onDeleteClicked" fx:id="deleteButton">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>
            <Button text="+" onAction="#onAddClicked">
                <font>
                    <Font size="18.0"/>
                </font>
            </Button>

        </HBox>
    </bottom>
</BorderPane>
